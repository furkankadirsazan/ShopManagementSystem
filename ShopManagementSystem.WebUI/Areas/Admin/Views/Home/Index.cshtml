@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title"><i class="flaticon2-website"></i> Genel Duyurular ve Teknik Destek </h4>
                <p class="card-text" style="font-size:15px;">
                    <span class="kt-badge kt-badge--brand kt-badge--inline">BİLGİLENDİRME</span> Duyuru deneme 1.</br></br>
                    <center><span id="dots" style="font-size:15px;"></span></center>
                    <span id="more" style="display:none;font-size:15px;">
                        <span class="kt-badge kt-badge--warning kt-badge--inline">BİLGİLENDİRME</span> Duyuru deneme 2.</br></br>
                    </span>
                </p>
                <a href="mailto:bilgi@kentmedia.com.tr" class="btn btn-warning"><i class="fas fa-envelope"></i> Teknik Destek</a>
                <a href="tel:08507066088" class="btn btn-primary"><i class="fas fa-headphones"></i> Müşteri Hizmetleri</a>
                <button onclick="myFunction()" id="myBtn" class="btn btn-success">Eski Duyuruları Göster</button>
            </div>
        </div>
    </div>
    <br />
    
   
    <br />
   
    

</div>
@section scripts{
    <script>
            function myFunction() {
                var dots = document.getElementById("dots");
                var moreText = document.getElementById("more");
                var btnText = document.getElementById("myBtn");

                if (dots.style.display === "none") {
                    dots.style.display = "inline";
                    btnText.innerHTML = 'Eski Duyuruları Göster';
                    moreText.style.display = "none";
                } else {
                    dots.style.display = "none";
                    btnText.innerHTML = 'Eski Duyuruları Gizle';
                    moreText.style.display = "inline";
                }
            };

    </script>

}
