@model Orders
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">


        <!--begin::Portlet-->
        <div class="kt-portlet">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title" style="font-size:15px;">
                        Sipariş Detayları <button type="button" class="btn btn-primary btn-icon" id="btn"><i class="fa fa-print" title="Yazdır"></i> </button>
                    </h3>
                </div>
            </div>

            <!--begin::Form-->

            @using (Html.BeginForm("Details", "Shop", FormMethod.Post, new { enctype = "multipart/form-data", @class = "kt-form kt-form--label-right" }))
            {
                <div class="kt-portlet__body" id="printContent">
                    <div class="form-group form-group-last">
                        @if (!string.IsNullOrEmpty(TempData["Message"] as string))
                        {
                            <div class="@("alert " + TempData["ResultClass"] as string) fade show" role="alert">
                                <div class="alert-icon"><i class="flaticon-warning"></i></div>
                                <div class="alert-text">@(Html.Raw(TempData["Message"] as string))</div>
                                <div class="alert-close">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true"><i class="la la-close"></i></span>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="form-group m-form__group row">
                        <div class="col-10 ml-auto">
                            <h3 class="m-form__section">Mağaza Bilgisi</h3>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ShopID" class="col-2 col-form-label"><font color="red">*</font> Mağaza Adı</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@Model.Shops.Title</label>                          
                        </div>
                    </div>
                    <hr />
                    <div class="form-group m-form__group row">
                        <div class="col-10 ml-auto">
                            <h3 class="m-form__section">Müşteri Bilgisi</h3>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CustomerID" class="col-2 col-form-label"><font color="red">*</font> Müşteri</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@(Model.Customers.Name + " " + Model.Customers.Surname)</label>                       
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CustomerID" class="col-2 col-form-label"><font color="red">*</font> Telefon</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@(Model.Customers.Phone)</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CustomerID" class="col-2 col-form-label"><font color="red">*</font> Email</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@(Model.Customers.Email)</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CustomerID" class="col-2 col-form-label"><font color="red">*</font> Adres</label>
                        <div class="col-10">
                            <textarea class="form-control" style="text-align:left;font-size:15px;" readonly>@(Model.Customers.Address)</textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CustomerID" class="col-2 col-form-label"><font color="red">*</font> İl</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@(Model.Customers.Provinces.Name)</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CustomerID" class="col-2 col-form-label"><font color="red">*</font> İlçe</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@(Model.Customers.Counties.Name)</label>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group m-form__group row">
                        <div class="col-10 ml-auto">
                            <h3 class="m-form__section">Ürün Bilgisi</h3>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="ShopID" class="col-2 col-form-label"><font color="red">*</font> Ürün Adı</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@(Model.Products.Name)</label>       
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ShopID" class="col-2 col-form-label"><font color="red">*</font> Sipariş Durumu</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@(Model.OrderStatuses.Name)</label>                                 
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Name" class="col-2 col-form-label"> Sipariş Adeti</label>
                        <div class="col-10">
                            <input type="number" class="form-control" value="@Model.Number" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Name" class="col-2 col-form-label"> Sipariş Tarihi</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@(Model.OrderDate.ToShortDateString())</label>     
                        </div>
                    </div>   
                    <div class="form-group row">
                        <label for="Name" class="col-2 col-form-label"> Son Güncelleme</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@(Model.UpdateDate.ToShortDateString())</label>     
                        </div>
                    </div>   

                </div>
                <div class="kt-portlet__foot">
                    <div class="kt-form__actions">
                        <div class="row">
                            <div class="col-2">
                            </div>
                            <div class="col-10">
                                <a href="/admin/order/index" class="btn btn-warning" style="font-size:15px;">Geri</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

        <!--end::Portlet-->
    </div>

</div>


@section scripts{

    <script src="~/Scripts/FunctionsJs/printThis.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.4/js/bootstrap-switch.js" integrity="sha256-+VCjCLUkzOOnKtJ0s04D3mcyypeENTag5Xivs9hQVKs=" crossorigin="anonymous"></script>
    <script>

         $("#btn").click(function () {
             $("#printContent").printThis({
                 header: '<center><h1>' + '@(Model.Customers.Name + " " + Model.Customers.Surname)' + ' Sipariş Bilgileri' + '</h1></center></br>'
             });
         });
    </script>
}


























