<body class="kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-header--fixed kt-header-mobile--fixed kt-subheader--fixed kt-subheader--enabled kt-subheader--solid kt-aside--enabled kt-aside--fixed kt-page--loading">

    <!-- begin:: Page -->
    <div class="kt-grid kt-grid--ver kt-grid--root">
        <div class="kt-grid kt-grid--hor kt-grid--root  kt-login kt-login--v5 kt-login--signin" id="kt_login">
            <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--desktop kt-grid--ver-desktop kt-grid--hor-tablet-and-mobile" style="background-image: url(/Content/AdminTemplate/assets/media//bg/bg-3.jpg);">


                <div class="kt-login__right">
                    <div class="kt-login__wrapper">
                        <a class="kt-login__logo" href="#">
                            <center><img src="~/Content/AdminTemplate/assets/media/logos/logo-5.png"></center>
                            <br />
                        </a>
                        <!-- # Start Login -->
                        <div class="kt-login__signin">
                            <div class="kt-login__head">
                                <h3 class="kt-login__title" style="font-weight:bold;">Mağaza Girişi</h3>
                                <button class="btn" id="ajax-loader-login" style="display:none;"><div class="kt-spinner kt-spinner--sm kt-spinner--warning"></div><br /></button>
                            </div>
                            <div class="kt-login__form">
                                @using (Ajax.BeginForm("Login", "Security", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divResult" }, new { @class = "kt-form", id = "loginForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div id="divResult" style="border-radius: 20px;"></div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı", autocomplete = "off", id = "Username" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Password, new
                                   {
                                       @class = "form-control form-control-last",
                                       type = "password",
                                       autocomplete = "off",
                                       placeholder = "Şifre",
                                       id = "Password"
                                   })
                                    </div>
                                    <div class="row kt-login__extra">
                                        <div class="col kt-align-left">
                                            <label class="kt-checkbox">
                                                @Html.CheckBoxFor(m => m.IsRemember, new { @type = "checkbox", id = "IsRemember" })
                                                Beni Hatırla
                                                <span></span>
                                            </label>
                                        </div>
                                        <div class="col kt-align-right">
                                            <a href="javascript:;" id="kt_login_forgot" class="kt-link">Şifremi Unuttum</a>
                                        </div>
                                    </div>
                                    <div class="kt-login__actions">                            
                                        <button id="btn-login" class="btn btn-warning btn-pill btn-elevate" style="font-size:15px;font-weight:bold">Giriş</button>
                                    </div>

                                }
                            </div>
                        </div>
                        <!-- # End Login -->
                        <div class="kt-login__forgot">
                            <div class="kt-login__head">
                                <h3 class="kt-login__title">Şifremi Unuttum</h3>
                                <div class="kt-login__desc">Şifrenizi sıfırlamak için sisteme kayıt olduğunuz mail adresinizi giriniz:</div>
                                <button class="btn btn-sm" id="ajax-loader" style="display:none;"><div class="kt-spinner kt-spinner--sm kt-spinner--warning"></div></button>
                            </div>
                            <div class="kt-login__form">
                                @using (Ajax.BeginForm("ForgotMyPassword", "Security", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divResult2" }, new { @class = "kt-form", id = "forgotMyPasswordForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div id="divResult2" style="border-radius: 20px;"></div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", autocomplete = "off", id = "Email", type = "email", required = "" })
                                    </div>
                                    <div class="kt-login__actions">
                                        <div class="container">
                                            <button id="btn-forgot-my-password" type="submit" class="btn btn-brand btn-pill btn-elevate btn-sm">Şifremi Sıfırla</button>
                                            <button id="kt_login_forgot_cancel" class="btn btn-outline-brand btn-pill btn-sm">Geri</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="kt-login__divider">
                    <div></div>
                </div>
                <div class="kt-login__left">
                    <div class="kt-login__wrapper">
                        <div class="kt-login__content">
                            <h3 class="kt-login__title">AİLEMİZE SİZ DE KATILIN</h3>
                            <span class="kt-login__desc" style="font-size:15px;font-weight:bold">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <font size="5"><i class="flaticon-star"></i></font> Avantajlarla dolu bir deneyim.
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <font size="5"><i class="flaticon-home-2"></i></font> Mağaza sahibi olmak ücretsiz.
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <font size="5"><i class="flaticon2-correct"></i></font> Güvenli ve keyifli alışveriş.
                                        </div>
                                    </div>
                                </div>
                                <br />
                                Mağazanızı ücretsiz oluşturun ürünlerinizi hemen satmaya başlayın.
                            </span>
                            <div class="kt-login__actions">
                                <button type="button" id="kt_login_signup" class="btn btn-danger btn-pill btn-elevate" style="background-color: #ff5600;font-size:15px;font-weight:bold">Hemen Mağaza Açın</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

