@model Customers
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">


        <!--begin::Portlet-->
        <div class="kt-portlet">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title" style="font-size:15px;">
                        Müşteri Detayları <button type="button" class="btn btn-primary btn-icon" id="btn"><i class="fa fa-print" title="Yazdır"></i> </button>
                    </h3>
                </div>
            </div>

            <!--begin::Form-->

            @using (Html.BeginForm("Details", "Customer", FormMethod.Post, new { enctype = "multipart/form-data", @class = "kt-form kt-form--label-right" }))
            {
                <div class="kt-portlet__body" id="printContent">
                    <div class="form-group form-group-last">
                        @if (!string.IsNullOrEmpty(TempData["Message"] as string))
                        {
                            <div class="@("alert " + TempData["ResultClass"] as string) fade show" role="alert">
                                <div class="alert-icon"><i class="flaticon-warning"></i></div>
                                <div class="alert-text">@(Html.Raw(TempData["Message"] as string))</div>
                                <div class="alert-close">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true"><i class="la la-close"></i></span>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="form-group row">
                        <label for="ShopID" class="col-2 col-form-label"><font color="red">*</font> Mağaza Adı</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@Model.Shops.Title</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CustomerID" class="col-2 col-form-label"><font color="red">*</font> Müşteri</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@(Model.Name + " " + Model.Surname)</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CustomerID" class="col-2 col-form-label"><font color="red">*</font> Telefon</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@(Model.Phone)</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CustomerID" class="col-2 col-form-label"><font color="red">*</font> Email</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@(Model.Email)</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CustomerID" class="col-2 col-form-label"><font color="red">*</font> Adres</label>
                        <div class="col-10">
                            <textarea class="form-control" style="text-align:left;font-size:15px;" readonly>@(Model.Address)</textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CustomerID" class="col-2 col-form-label"><font color="red">*</font> İlçe</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@(Model.Counties.Name)</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CustomerID" class="col-2 col-form-label"><font color="red">*</font> İl</label>
                        <div class="col-10">
                            <label class="form-control" style="text-align:left;font-size:15px;">@(Model.Provinces.Name)</label>
                        </div>
                    </div>                   
                </div>
                <div class="kt-portlet__foot">
                    <div class="kt-form__actions">
                        <div class="row">
                            <div class="col-2">
                            </div>
                            <div class="col-10">
                                <a href="/admin/customer/index" class="btn btn-warning" style="font-size:15px;">Geri</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

        <!--end::Portlet-->
    </div>

</div>


@section scripts{

    <script src="~/Scripts/FunctionsJs/printThis.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.4/js/bootstrap-switch.js" integrity="sha256-+VCjCLUkzOOnKtJ0s04D3mcyypeENTag5Xivs9hQVKs=" crossorigin="anonymous"></script>
    <script>

         $("#btn").click(function () {
             $("#printContent").printThis({
                 header: '<center><h1>' + '@(Model.Name + " " + Model.Surname)' + ' Müşteri Bilgileri' + '</h1></center></br>'
             });
         });
    </script>
}




























